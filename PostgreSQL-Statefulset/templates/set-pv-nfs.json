{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "statefulset-pgdata",
        "labels": {
            "name": "statefulset-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "{{ .Values.pv.storage }}"
        },
        "accessModes": "{{ .Values.persistence.accessModes }}",
        "nfs": {
            "path": "{{ .Values.nfs.path }}",
            "server": "{{ .Values.nfs.server }}"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
